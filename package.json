{
  "name": "foodics-reservations",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "vite --port 5173",
    "build": "vue-tsc && vite build",
    "preview": "vite preview",
    "typecheck": "vue-tsc --noEmit",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write \"src/**/*.{js,ts,vue,css,scss,md}\"",
    "test:unit": "vitest",
    "test:unit:watch": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:all": "NO_COLOR= FORCE_COLOR=1 playwright test --reporter=list",
    "test:e2e:all:nocolor": "NO_COLOR= FORCE_COLOR=0 playwright test --reporter=list",
    "test:e2e:chromium": "NO_COLOR= FORCE_COLOR=1 playwright test --project=chromium --reporter=list",
    "test:e2e:firefox": "NO_COLOR= FORCE_COLOR=1 playwright test --project=firefox --reporter=list",
    "test:e2e:webkit": "NO_COLOR= FORCE_COLOR=1 playwright test --project=webkit --reporter=list",
    "test:e2e:ar": "NO_COLOR= FORCE_COLOR=1 LOCALE=ar playwright test --reporter=list",
    "test:e2e:last-failed": "NO_COLOR= FORCE_COLOR=1 playwright test --last-failed --reporter=list",
    "test:e2e:debug": "PWDEBUG=1 playwright test --timeout=0 --retries=0 --workers=1",
    "test:e2e:trace": "playwright show-trace ./test-results/**/trace.zip",
    "test:e2e:next": "node .git/tools/pw-next.mjs",
    "test:e2e:loop": "while node .git/tools/pw-next.mjs; do :; done",
    "test:e2e:smoke": "playwright test tests/e2e/smoke.spec.ts tests/e2e/app-shell.spec.ts --project=\"Desktop Chrome\"",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:desktop": "playwright test --project=\"Desktop Chrome\" --project=\"Desktop Firefox\" --project=\"Desktop Edge\"",
    "test:e2e:mobile": "playwright test --project=\"Mobile Chrome\" --project=\"Mobile Safari\"",
    "test:e2e:chrome": "playwright test --project=\"Desktop Chrome\"",
    "test:e2e:edge": "playwright test --project=\"Desktop Edge\"",
    "test:e2e:online": "PW_E2E_ONLINE=true playwright test --grep @online",
    "test:e2e:ci": "playwright test --reporter=html",
    "test:ci": "vitest run && playwright test",
    "test:quick": "npm run lint && npm run typecheck && npm run test:unit",
    "test:full": "npm run lint && npm run typecheck && npm run test:unit && npm run test:e2e:all:nocolor",
    "test:watch": "npm run test:unit:watch",
    "pre-commit": "./scripts/pre-commit.sh",
    "setup-git-hooks": "cp scripts/pre-commit.sh .git/hooks/pre-commit && chmod +x .git/hooks/pre-commit"
  },
  "dependencies": {
    "@vueuse/core": "^13.9.0",
    "axios": "^1.6.7",
    "pinia": "^2.1.7",
    "vue": "^3.4.19",
    "vue-i18n": "^9.10.1",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@playwright/test": "^1.42.1",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "@types/node": "^24.6.2",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vitest/coverage-v8": "^1.6.1",
    "@vue/test-utils": "^2.4.4",
    "autoprefixer": "^10.4.17",
    "axios-mock-adapter": "^2.1.0",
    "dotenv": "^17.2.3",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-vitest": "^0.5.4",
    "eslint-plugin-vitest-globals": "^1.5.0",
    "eslint-plugin-vue": "^9.21.1",
    "jsdom": "^24.0.0",
    "postcss": "^8.4.35",
    "prettier": "^3.2.5",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.1.3",
    "vite-tsconfig-paths": "^4.3.1",
    "vitest": "^1.3.1",
    "vue-tsc": "^2.0.6"
  }
}
